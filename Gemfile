source "https://rubygems.org"

# Ruby on Rails - http://rubyonrails.org/
gem "rails", "~> 3.2.11"

# haml-like templates - http://slim-lang.com/
gem "slim", "~> 1.3"

# Rack host of choice - http://puma.io/
gem "puma", "~> 1.6"

# Generalized authentication - https://github.com/intridea/omniauth
gem "omniauth", "~> 1.1"

# We're all devs, so GitHub OAuth all the way - https://github.com/intridea/omniauth-github
gem "omniauth-github", "~> 1.0"

# Gems used to compile assets; unnecessary in production.
group :assets do
  # Rails integration for Sass - http://sass-lang.com/
  gem "sass-rails", "~> 3.2"

  # Rails integration for Compass - http://compass-style.org/
  gem "compass-rails", "~> 1.0"

  # Rails bridge to the CoffeeScript compiler - https://github.com/rails/coffee-rails
  gem "coffee-rails", "~> 3.2"

  # Ruby bridge to UglifyJS - https://github.com/lautis/uglifier
  gem "uglifier", "~> 1.0"
end

group :development do
  # Never leave home without a debugger - https://github.com/cldwalker/debugger
  gem "debugger", platforms: [:mri]
end
